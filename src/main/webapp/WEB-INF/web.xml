<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>Archetype Created Web Application</display-name>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.cg.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GoodsServlet</servlet-name>
        <servlet-class>com.cg.servlet.GoodsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GoodsServlet</servlet-name>
        <url-pattern>/goods</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>StaticsCountByHashMapFilter</filter-name>
        <filter-class>com.cg.filter.StaticsCountByHashMapFilter</filter-class>

    </filter>
    <filter-mapping>
        <filter-name>StaticsCountByHashMapFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>LoopFilePathServelt</servlet-name>
        <servlet-class>com.cg.servlet.LoopFilePathServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoopFilePathServelt</servlet-name>
        <url-pattern>/file</url-pattern>
    </servlet-mapping>

</web-app>
